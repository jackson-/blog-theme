{{!-- Add Layout --}}
{{!< default}}

{{#post}}

<main class="container">
	<section class="row main-wrap layout-wrap layout-row margin-top">

		{{#has tag="#video"}}
			<div id="video-format" class="col s12 video-wrap">
				<aside class="video-responsive video-featured"></aside>
				<div class="video-content hide-before-md" style="display:none">
					<span class="channel-name"></span>
					<span class="youtube-subscribe"><div class="g-ytsubscribe" data-channelid="" data-layout="default" data-count="default"></div></span>
				</div>
			</div>
		{{/has}}

		{{#has tag="#image"}}
			{{#if image}}
				<figure class="col s12 post-image">
					<img src="{{image}}" alt="{{title}}" class="img-responsive"/>
				</figure>
			{{/if}}
		{{/has}}

		<article class="col-gd-left post">

			<h1 class="title">{{title}}</h1>

			{{!-- author, date, tag, comments - share count and btn share--}}

			<div class="post-byline">
			{{#author}}
				<a class="post-authorAvatar hide-before-md" href="{{url}}" style="background-image:url({{#if image}}{{image}}{{else}}{{asset "img/user-image.png"}}{{/if}})"></a>
				<span class="author-name">By <strong><a href="{{url}}">{{name}}</a></strong></span>
			{{/author}}
				<i class="point">â€”</i>
				<time class="timestamp" datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
				<span>in</span>
				<span class="tag">{{tags limit="1"}}</span>
			</div>


			{{^has tag="#image"}}
				{{#if image}}
					<figure class="post-image"><img src="{{image}}" alt="{{title}}" class="img-responsive"/></figure>
				{{/if}}
			{{/has}}

			<ul class="post-actions post-actions--top u-unstyled clear">
				<li><a class="post-actions-comment scrolltop" href="#comments"><i class="i-chat"></i><span class="gd-comment_count" godo-url="{{url absolute="true"}}"></span></a></li>
				<li class="post-actions-shares">
					<div class="post-actions-shares-count share-count" godo-url="{{url absolute="true"}}">0</div>
					<div class="post-actions-shares-label">shares</div>
				</li>
				<li><a href="#" class="btn btn-circle-small share i-facebook bg-facebook" godo-share="facebook" godo-url="{{url absolute="true"}}"></a></li>
				<li><a href="#" class="btn btn-circle-small share i-twitter bg-twitter" godo-share="twitter" godo-title="{{title}}" godo-url="{{url absolute="true"}}"></a></li>
				<li><a href="#" class="btn btn-circle-small share i-reddit bg-reddit" godo-share="reddit" godo-url="{{url absolute="true"}}"></a></li>
				<li><a href="#" class="btn btn-circle-small share i-linkedin bg-linkedin" godo-share="linkedin" godo-url="{{url absolute="true"}}"></a></li>
				<li class="hide-before-md"><a href="#" class="btn btn-circle-small share i-pinterest bg-pinterest" godo-share="pinterest" godo-title="{{title}}" godo-url="{{url absolute="true"}}"></a></li>
				<li class="hide-before-md"><a href="#" class="btn btn-circle-small share i-pocket bg-pocket" godo-share="pocket" godo-url="{{url absolute="true"}}"></a></li>
			</ul>

			<div class="post-content">{{content}}</div>

			{{#if tags}}<div class="tags">{{#foreach tags}}<a href="{{url}}" title="{{name}}" class="btn btn-shadow tag">{{name}}</a>{{/foreach}}</div>{{/if}}

			<div class="row main-wrap layout-wrap layout-row share-subscribe">
				{{> widget-share}}
				{{> widget-newsletter}}
			</div>

			<div id="comments" class="comments">
				<div id="disqus_thread"></div>
				<!-- <div class="fb-comments" data-href="{{url absolute="true"}}" data-width="100%" data-numposts="5"></div> -->
			</div>

			{{!-- Post Related --}}
			{{> widget-related}}


		</article>
		{{!-- Add Sidebar --}}
		{{> "sidebar"}}

	</section>
</main>
{{/post}}
